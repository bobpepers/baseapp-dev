.cr-copyable-text-field {
    border: none;
    background: var(--bg-2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: inherit;
    border-radius: calc(var(--gap) * 0.66);
    flex-grow: 1;
    padding: 0;

    legend {
        background: var(--bg-2);
        margin-bottom: auto;
        margin-top: calc(var(--gap) * -1.5);
        position: absolute;
        width: max-content;
    }

    &__input {
        display: flex;
        flex-direction: row;
        flex: 1;
        color: var(--text-secondary);
        background: var(--bg-2);
        background: inherit;
        padding: calc(var(--gap) * 1.67) calc(var(--gap) * 0.83) calc(var(--gap) * 0.83) var(--gap) !important;

        input {
            background: unset;
            color: var(--text-secondary);
        }
    }

    .cr-copyable-text-field {
        padding: 0;
    }

    input {
        width: 100%;
        border-radius: 0;
        border-style: none;
        color: var(--text-secondary);
        background: var(--bg-2);
        outline: none;
    }
}
