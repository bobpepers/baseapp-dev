.verify-email {
    background-color: var(--main-bg);
    text-align: center;
    margin: 20px 0;
    &-title {
        background-color: var(--header);
        color: var(--bright);
        padding: 20px 0;
        border-bottom: 2px solid var(--text);
    }

    &-description {
        background: var(--main-bg);
        color: var(--placeholder-text);
        padding: 20px 20px;
    }

    &-button {
        padding-bottom: 20px;
    }
}
